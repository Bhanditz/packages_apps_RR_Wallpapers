        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@android:style/Theme.Holo.Light.DarkActionBar" android:persistent="true" android:permission="android.permission.SET_WALLPAPER" android:allowTaskReparenting="true">
