            android:label="@string/app_name" android:launchMode="singleTop" android:configChanges="uiMode">
             <intent-filter>
                <action android:name="android.intent.action.SET_WALLPAPER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>